<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="350dp"
    android:background="@drawable/rounded_rectangle_shape">

    <ImageView
        android:id="@+id/closeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/baseline_close_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/closeButton"
        android:gravity="start"
        android:layout_marginStart="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/infoTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/addressTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="150dp"
            android:layout_height="100dp"
            android:src="@drawable/tangerine" />

        <TextView
            android:id="@+id/additionalTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="교통 리뷰"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/additionalTextView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="서비스 리뷰"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/additionalTextView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시간 리뷰"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/additionalTextView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="긍정 부정 리뷰"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/additionalTextView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="비용 리뷰"
            android:textColor="@android:color/black"
            android:textSize="12sp" />
        <TextView
            android:id="@+id/additionalTextView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="토탈 리뷰"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            android:layout_marginBottom="20dp" />
    </LinearLayout>
</RelativeLayout>
